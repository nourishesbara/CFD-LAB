 #include<iostream.h>
 #include<cmath>
 using namespace std;
#define pi 3.14

float F(float x)
{
    return sin(pi*x);
}

int main()
{
    int i,j,m,n;
    float c,r,h,k,M[10][10];
    cout<<"enter value of c";
    cin>>c;
    cout<<"enter value of h and k";
    cin>>h>>k;
    r=(c*c*k)/(h*h);
    m=int(1/h);
    n=int(0.06/k);
    for(i=0;i<=n;i++)
    {
        M[0][i] = 0;
        M[m+1][i] = 0;
    }
    for(i=1;i<=m;i++)
    {
        M[i][0] = F(i*h);
    }
    for(j=0;j<=n;j++)
    {
        for(i=1;i<=m;i++)
        {
            M[i][j+1] = r*(M[i-1][j]+M[i+1][j])+(1-2*r)*(M[i][j]);
        }
    }
    cout<<"solution of heat equation\n";
    for(j=n;j>=0;j--)
    {
        for(i=0;i<=m+1;i++)
        {
            cout<<M[i][j]<<"\t";
        }
        cout<<"\n";
    }
    return 0;
}
